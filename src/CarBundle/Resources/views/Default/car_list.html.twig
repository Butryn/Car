{% extends 'CarBundle::layout.html.twig' %}
{% block content %}

<div class="panel panel-info">
	 <div class="panel-heading">
		<h2>Nasze samochody:</h1>
	</div>
	<div class="panel-body">
		<table class="table">
			<tr>
				<td>Samochód</td>
				<td>Marka</td>
				<td>Model</td>
				<td>Moc</td>
				<td>Typ</td>
				<td class="text-center">Cena za dzień</td>
			</tr>
			{% for car in cars %}
			
			<tr>
				<td><img class="img-responsive" src="{{car.img}}"</td>
				<td><b>{{car.brand}}</b></td>
				<td><b>{{car.model}}</b></td>
				<td>{{car.power}}</td>
				<td>{{car.type}}</td>
				<td>{{car.price}}zł</td>
				<td><a class="btn btn-primary" href="{% if app.user %}{{'order'}}/{{car.id}}{% else %}{{path('fos_user_security_login')}}{% endif %}"><span class="glyphicon glyphicon glyphicon-ok"></span> Wypożycz</a></td>
			</tr>
			{% endfor %}
		</table>
	</div>
</div>
	{% endblock %}